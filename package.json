{
  "name": "example-app",
  "version": "0.0.0",
  "description": "Example app demo",
  "engines": {
    "node": ">= 12.13 <13"
  },
  "devDependencies": {
    "@types/jest": "^26.0.8",
    "@types/node": "~12.12.47",
    "@typescript-eslint/eslint-plugin": "~3.2.0",
    "@typescript-eslint/parser": "~3.2.0",
    "eslint": "~7.2.0",
    "eslint-config-prettier": "~6.11.0",
    "eslint-plugin-jest": "~23.13.2",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.2.0",
    "prettier": "~2.0.5",
    "rimraf": "~3.0.2",
    "ts-jest": "^26.1.4",
    "tsutils": "~3.17.0",
    "typescript": "~3.9.4"
  },
  "scripts": {
    "start": "npm-run-all clean build .run-app",
    "clean": "rimraf coverage build tmp",
    "dev": "npm-run-all --parallel build:watch start:watch",
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "start:watch": "PORT=8000 nodemon --watch build --ext js ./build/main.js",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    ".run-app": "node --require dotenv/config ./build/main.js"
  },
  "author": "Jakub Synowiec <github@jakubsynowiec.info>",
  "license": "Apache-2.0",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dayjs": "^1.8.30",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.6.0",
    "express-winston": "^4.0.5",
    "helmet": "^3.23.3",
    "tslib": "~2.0.0",
    "winston": "^3.3.3"
  }
}
